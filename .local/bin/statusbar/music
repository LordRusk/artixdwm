#!/bin/sh

filter() { mpc | sed "/^volume:/d;s/\\&/&amp;/g;s/\\[paused\\].*/‚è∏/g;/\\[playing\\].*/d" | paste -sd ' ';}

case $BUTTON in
	1) mpc status | filter ; setsid "$TERMINAL" -e ncmpcpp & ;;  # right click, pause/unpause
	3) mpc toggle | filter ;;  # right click, pause/unpause
	2) mpc status | filter ; notify-send "üéµ Music module" "\- Shows mpd song playing.
- Italic when paused.
- Left click opens ncmpcpp.
- Middle click pauses.
- Scroll changes track.";;  # right click, pause/unpause
	4) mpc prev   | filter ;;  # scroll up, previous | not here
	5) mpc next   | filter ;;  # scroll down, next | not here
	6) mpc status | filter ; "$TERMINAL" -e "$EDITOR" "$0" ;;
	*) mpc status | filter ;;
esac
