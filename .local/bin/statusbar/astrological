#!/bin/sh

# Simple moonphase and
# horoscope script that
# uses Horoscope-api

# Signs
# -----
# Aries
# Cancer
# Taurus
# Leo
# Gemini
# Virgo
# Libra
# Capricorn
# Scorpio
# Aquarius
# Sagittarius
# Pisces

# Possible Days
# -------------
# Yesterday
# Today
# Tomorrow

# Variables
sign="pisces"
day="today"

# Files
moonfile="${XDG_DATA_HOME:-$HOME/.local/share}/moonphase"
scopefile="${XDG_DATA_HOME:-$HOME/.local/share}/scopefile"

# Get new info everyday
[ "$(stat -c %y "$moonfile" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] ||
	{ curl -sf "wttr.in/?format=%m" > "$moonfile" || exit 1 ;}
[ "$(stat -c %y "$horoscope" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] ||
	{ GET "http://horoscope-api.herokuapp.com/horoscope/$day/$sign" > "$scopefile" || exit 1 ;}

# Moonphase stuff
moon="$(cat "$moonfile")"
case "$moon" in
	ğŸŒ‘)moonname="New" ;;
	ğŸŒ’)moonname="Waxing Crescent" ;;
	ğŸŒ“)moonname="First Quarter" ;;
	ğŸŒ”)moonname="Waxing Gibbous" ;;
	ğŸŒ•)moonname="Full" ;;
	ğŸŒ–)moonname="Waning Gibbous" ;;
	ğŸŒ—)moonname="Last Quarter" ;;
	ğŸŒ˜)moonname="Waning Crescent" ;;
	*) exit 1 ;;
esac

# Horoscope stuff
horoscope="$(sed '1,2d;4,5d;s/\"//g;s/\",//g' $scopefile | cut -d: -f 2)"
sign="$(sed '1,2d;3d;5d;s/\"//g' $scopefile | cut -d ' ' -f 4)"
case "$sign" in
	aries) sign="â™ˆ" ;;
	cancer) sign="â™‹" ;;
	taurus) sign="â™‰" ;;
	leo) sign="â™Œ" ;;
	gemini) sign="â™Š" ;;
	virgo) sign="â™" ;;
	libra) sign="â™" ;;
	capricorn) sign="â™‘" ;;
	scorpio) sign="â™" ;;
	aquarius) sign="â™’" ;;
	sagittarius) sign="â™" ;;
	pisces) sign="â™“" ;;
esac

# Print to the bar
echo "${moon-?}"

# Clickable bar stuff
case $BLOCK_BUTTON in
	1) notify-send "ğŸŒœ Moon phass:
- ğŸŒ‘: New
- ğŸŒ’: Waxing Crescent
- ğŸŒ“: First Quarter
- ğŸŒ”: Waxing Gibbous
- ğŸŒ•: Full
- ğŸŒ–: Waning Gibbous
- ğŸŒ—: Last Quarter
- ğŸŒ˜: Waning Crescent" ;;
	2) notify-send "Moon phase and horoscope" "\- Shows moon phase
- Shows ğŸ”ƒ if updating
- Right Click Shows different moon phases
- Left Click Shows Horoscope" ;;
	3) notify-send -t 0 "Horoscope $sign:$horoscope" ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
