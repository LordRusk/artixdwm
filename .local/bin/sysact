#!/bin/sh

# A dmenu wrapper script and cli for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="sudo -A zzz" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p" ;;
esac


[ -z "$1" ] || case $1 in
	lock) locker && exit ;;
	leave) kill -TERM $(pidof -s dwm) && exit ;;
	renew) kill -HUP $(pidof -s dwm) && exit ;;
	hibernate) ${hib:-sudo -A systemctl suspend-then-hibernate} && exit ;;
	reboot) ${reb:-sudo -A reboot} && exit ;;
	shutdown) ${shut:-sudo -A shutdown -h now} && exit ;;
esac

cmds="\
ğŸ”’ lock		locker
ğŸšª leave dwm	kill -TERM $(pidof -s dwm)
â™» renew dwm	kill -HUP $(pidof -s dwm)
ğŸ» hibernate	${hib:-sudo -A systemctl suspend-then-hibernate}
ğŸ”ƒ reboot	${reb:-sudo -A reboot}
ğŸ–¥ shutdown	${shut:-sudo -A shutdown -h now}"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
