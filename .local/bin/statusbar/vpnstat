#!/bin/sh

# Simple wrapper script for
# all of the vpn scripts.

case $1 in
	-express) vpnscript="express" ;;
	*) printf "Unknown vpn!\nCheck the script!\n"; exit ;;
esac

case $BLOCK_BUTTON in
	1) $vpnscript -lc ;;
	2) notify-send "🙈🙉🙊 VPN Module" "\-Left Click Toggles VPN Conncection
🔐: VPN Connected
🔓: VPN Disconnected" ;
esac

$vpnscript
