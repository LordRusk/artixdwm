#!/bin/sh

# Simple Express VPN Module

case $BLOCK_BUTTON in
	1) [ "$(expressvpn status | head -n1 | cut -d' ' -f2)" = "to" ] && notify-send "disconnecting" && expressvpn disconnect && kill -$((34+11)) $(pidof dwmblocks) && exit || notify-send "Connecting..." && expressvpn connect && kill -$((34+11)) $(pidof dwmblocks) && exit ;;
	2) notify-send "ğŸ™ˆğŸ™‰ğŸ™Š ExpressVPN Module" "\-Left Click Toggles VPN Conncection
